#!/usr/bin/env bash

set -e

### see https://github.com/creationix/nvm
! test -d ~/.nvm &&
git clone https://github.com/creationix/nvm.git ~/.nvm

source $HOME/.nvm/nvm.sh

# nvm ls-remote
nvm install v0.11.7
nvm install v0.10.26
nvm install v0.10.25

## set our local defaults
### for future shells
nvm alias default v0.10.25
### for this shell right now
nvm use v0.10.25

## install some decent global libraries on the default node
npm install -g npm --silent &&
npm install -g bower --silent  &&
npm install -g component --silent  &&
npm install -g foreman --silent  &&
npm install -g forever --silent  &&
npm install -g grunt --silent  &&
npm install -g grunt --silent -cli &&
npm install -g handlebars --silent  &&
npm install -g jshint --silent  &&
npm install -g less --silent  &&
npm install -g nodemon --silent  &&
npm install -g norman --silent  &&
npm install -g pageres --silent  &&
npm install -g supervisor --silent 

## show off the whizbangs
npm list -g --depth=0
nvm ls

exit 0
